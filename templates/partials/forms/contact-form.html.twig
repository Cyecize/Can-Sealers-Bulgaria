{# @var information \App\Service\TwigInformer #}

<div class="row p-0 m-0">
    <div class="col-md-6">
        <div>
            <div class="text-left">
                <h3 class="fat-text">{{ dict.address }}:</h3>
                <p>{{ information.websiteInfo.address }}</p>
                <small>{{ information.websiteInfo.location }}</small>
                <hr>
                <h3 class="fat-text">{{ dict.sendQuestion }}</h3>
                <br>
            </div>
            <div class="row p-1">
                <div class="col-md-4 facebook-message-button-container display-none">
                    <span class="btn btn-outline-primary facebook-message-button">
                        <i class="fa fa-facebook"></i> Facebook
                    </span>
                </div>
                <div class="col-md-4">
                    <a href="https://wa.me/{{ information.contacts.whatsapp }}"
                       target="_blank"
                       class="btn btn-outline-success">
                        <i class="fa fa-whatsapp"></i> Whatsapp
                    </a>
                </div>
                <div class="col-md-4">
                    <span class="btn btn-outline-secondary contact-form-option-email">
                        <i class="fa fa-envelope"></i> Email
                    </span>
                </div>
            </div>
            <div class="send-msg-form-container display-none">
                {% embed 'partials/forms/contact-form-fields.html.twig' %} {% endembed %}
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1448.795945882669!2d23.22375937545419!3d43.427352769400564!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4754cb3582841599%3A0xfb46a5f9b72b8495!2z0YPQuy4g4oCe0J_QvtC_INCf0YPQvdGH0L7igJwgNiwgMzQwNSDQodC10LLQtdGA0L3QsCDQv9GA0L7QvNC40YjQu9C10L3QsCDQt9C-0L3QsCwg0JzQvtC90YLQsNC90LA!5e0!3m2!1sbg!2sbg!4v1610372744205!5m2!1sbg!2sbg"
                width="100%" height="450" frameborder="0" style="border:0; margin-top: 5px;" allowfullscreen></iframe>
    </div>
</div>