{% extends 'base.html.twig' %}

{% block body %}
    <div class="container rounded bg-container mt-container pb-container">
        <div class="row row-lg-eq-height">
            <!-- Main Content -->

            <div class="col-lg-9">
                <div class="main_content mt-2">
                    <h2 class="alert alert-danger">You are not allowed to see this page</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <img src="{{ asset('img/500.png') }}" width="100%">
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-info">Status code: 401</h3>
                            <h4 class="text-info">Message:
                                <span class="text-danger">{{ exception.message }}</span>
                            </h4>
                            <p class="text-danger">This page requires certain permissions which you currently lack.
                                Contact us for more info <a href="{{ path('contacts') }}">here</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}