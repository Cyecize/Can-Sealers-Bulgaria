{% extends 'base.html.twig' %}

{% block body %}

    <div class="container rounded bg-container mt-container pb-container">
        <div class="row row-lg-eq-height">

            <!-- Main Content -->

            <div class="col-lg-9">
                <div class="main_content mt-2">
                    <h2 class="alert alert-danger">Oops... Something went wrong! </h2>
                    <div class="row">
                        <div class="col-md-6">
                            <img src="{{ asset('img/500.png') }}" width="100%">
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-info">Status code: {{ exception.code }}</h3>
                            <h3 class="text-info">Message: </h3>
                            <p class="text-danger">{{ exception.message }}</p>
                        </div>
                    </div>
                    <h3>You can submit your problem <a href="{{ path('contacts') }}">here</a></h3>

                </div>
            </div>
        </div>
    </div>

{% endblock %}