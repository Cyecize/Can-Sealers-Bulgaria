{% extends 'admins/admin-panel.html.twig' %}
{% block title %}Notify all{% endblock %}
{# @var dict \AppBundle\Service\Lang\ILanguagePack #}
{% block sectionContent %}
    <h2 class="text-dark">{{ dict.notifyAll }}</h2>
    <hr>
    <div id="" class="container">
        <form method="post">
            <div class="form-group">
                <label for="message">Info</label>
                <input type="text" class="form-control" name="notification[message]" id="message" required placeholder="Message" maxlength="255">
                <div class="text-danger">{{ form_errors(form1.message) }}</div>
            </div>
            <div class="form-group">
                <label for="href">Href</label>
                <input type="text" class="form-control" id="href" name="notification[href]" required value="#" maxlength="255">
                <div class="text-danger">{{ form_errors(form1.href) }}</div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-success">{{ dict.send }}</button>
            </div>
        </form>
    </div>
{% endblock %}