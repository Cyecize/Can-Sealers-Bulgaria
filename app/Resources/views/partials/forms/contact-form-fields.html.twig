{# @var usr \AppBundle\Entity\User #}
{% set usr = app.user %}
<form method="post" action="{{ path('contacts') }}">
    <input type="hidden" name="notification[email]" value="{% if app.user %}{{ usr.email }}{% endif %}">
    <div>
        <div>
            <div class="form-group">
                <input required value="{% if app.user %}{{ usr.fullName }}{% endif %}" type="text"
                       class="form-control" maxlength="50"
                       placeholder="{{ dict.yourName }} *" name="notification[fullName]" id="name">
            </div>

            <div class="form-group">
                <input value="{% if app.user %}{{ usr.phoneNumber }}{% endif %}" type="tel"
                       class="form-control"
                       maxlength="15"
                       placeholder="{{ dict.yourPhoneNumber }} *" name="notification[phoneNumber]"
                       id="phone"
                       required="" aria-invalid="false">
                <p class="help-block text-danger"></p>
            </div>

            <div class="form-group">
                        <textarea class="form-control" rows="5"
                                  placeholder="{{ dict.yourQuestion }} *"
                                  id="message" name="notification[message]" required
                                  aria-invalid="false">{% if contactBindingModel is defined %}{#TODO put value here#}{% endif %}{% if about is defined %}{{ about }}{% endif %}</textarea>
            </div>
        </div>
        <div class="clearfix"></div>
        <input type="hidden" name="token" value="{{ csrf_token('token') }}">
        <div class="text-right">
            <button type="submit" class="btn btn-outline-success">{{ dict.send }}!</button>
        </div>
    </div>
</form>