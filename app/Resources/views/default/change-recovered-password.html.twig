{% extends 'base.html.twig' %}

{% block title %} Забравена парола - Затварачки БГ {% endblock %}
{% block body %}
    <div class="fit-in-screen clearfix"> <!-- not closed tag on purpose -->

        <h1 class="fat-text">Забравена парола</h1>
        <hr>
        {% if error %}
            <h1 class="alert alert-danger">{{ error }}</h1>
        {% endif %}
        <form method="post" enctype="multipart/form-data" class="col-md-4">
            <div class="form-group">
                <div class="form-group">
                    <label for="new-password">Нова парола:</label>
                    <input required class="form-control" id="new-password" type="password"
                           name="user_password[newPassword]">
                </div>
                <div class="form-group">
                    <label for="conf-password">Нова парола отново:</label>
                    <input required class="form-control" id="conf-password" type="password"
                           name="user_password[confPassword]">
                </div>
                {{ form_row(form._token) }}

                <div class="object-right">
                    <button type="submit" class="btn btn-primary btn-xs">Запази »</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}