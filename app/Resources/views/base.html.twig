<!DOCTYPE html>
{# @var information \AppBundle\Service\TwigInformer #}
{# @var dict \AppBundle\Service\Lang\ILanguagePack #}
{% set dict = localLang.dictionary %}

<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="Сайт за затварачки на консервни кутии, рецепти и консервни кутии">
    <meta name="keywords"
          content="затварачки,консерви,рецепти,кутии,zatvarachki,консервиране, консервни кутии, консерванти, can juno, изгодна цена, цена, изплащане">
    <meta name="author" content="Tsvetelin Yakimov">

    <meta property="og:type" content="application/index"/>
    <meta property="og:title" content="{{ dict.websiteName }}"/>
    <meta property="og:description" content="{{ information.websiteInfo.aboutUs }}"/>
    <meta property="og:image" content="{{ url('homepage') }}img/fb-logo.jpg"/>

    <title>{% block title %}{{ dict.websiteName }}{% endblock %}</title>
    {% embed 'partials/base-layout/styles.html.twig' %} {% endembed %}

    <script src="{{ asset('static/jquery-3.js') }}"></script>
    <script src="{{ asset('static/bootstrap.min.js') }}"></script>

    {% block stylesheets %}{% endblock %}
</head>

<body>
<!-- The developer (Tsvetelin Yakimov) does not agree with that background image but the customer demanded it! -->
{% embed 'partials/base-layout/header.html.twig' %} {% endembed %}
{% block body %}{% endblock %}
{% embed 'partials/base-layout/footer.html.twig' %} {% endembed %}
{% embed 'partials/modal/modal-template.html.twig' with {'modalId':'sharedModal'} %} {% endembed %}
{% embed 'partials/base-layout/scripts.html.twig' %} {% endembed %}
{% block javascripts %}{% endblock %}
</body>
</html>